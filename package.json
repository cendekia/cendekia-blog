{
  "name": "cendekiapp",
  "version": "1.0.0",
  "description": "Cendekia's Tech Journey Blog",
  "scripts": {
    "start": "bundle exec jekyll serve",
    "build": "bundle exec jekyll build",
    "build:tailwind": "tailwindcss -i ./assets/css/main.scss -o ./assets/css/main.css",
    "watch:tailwind": "tailwindcss -i ./assets/css/main.scss -o ./assets/css/main.css --watch",
    "dev": "concurrently \"npm run watch:tailwind\" \"npm run start\""
  },
  "dependencies": {},
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2"
  }
} 